<mvc:View
    controllerName="project_d.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Button
        text="Say Hello"
        press=".onShowHello"
    />
    <Input
        value="{/recipient/name}"
        placeholder="Enter here"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true"
        width="60%"
    />
</mvc:View>